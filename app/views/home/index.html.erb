<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<div id='main-container'>
    <div id='map'></div>
    <div id='state-info-container'>
            <select id="myselect">
                <%= @state_names.each do |s| %>
                    <option value=<%= s[:id] %>>
                        <%= s[:name] %>
                    </option>
                <% end %>
            </select>
            <button id='search'>Yo</button>
            <hr>
            <div id="state-content">
                <h1 id="state-name"></h1>
                <img id="state-flag-image"/>
                <p id="state-description"></p>
                <p id="state-capitol"></p>
                <p id="state-population"></p>
                <div id="state-facts">
                    
                </div>
            </div>
    </div>
</div>
